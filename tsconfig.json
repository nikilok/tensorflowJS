{
    "compilerOptions": {
      "module": "commonjs",
      "skipLibCheck" : true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "target": "ESNext",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "pretty": true,
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  